record(mbbi, "$(dev):$(id)$(unit):FANAUTO") {
  field(DESC, "Fan supports auto adjustment")
  field(SCAN, "I/O Intr")
  field(DTYP, "MCHsensor")
  field(INP,  "#B$(fruid) C0 N0 @$(link)+fan")
  field(ZRST, "No")
  field(ZRVL, "0")
  field(ONST, "Yes")
  field(ONVL, "1")
  field(PINI, "YES")

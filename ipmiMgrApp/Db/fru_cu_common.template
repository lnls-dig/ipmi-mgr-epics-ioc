record(longout, "$(dev):$(id)$(unit):FANSPEEDSET") {
  field(DESC, "Set fan level")
  field(DTYP, "FRUinfo")
  field(OUT,  "#B$(fruid) C0 N0 @$(link)+fan")
  field(OMSL, "supervisory")
}

record(ai, "$(dev):$(id)$(unit):FANLEVEL") {
  field(SCAN, "10 second")
